<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/card_background"
    android:layout_marginVertical="4dp">

    <!-- Date and Score Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="01/01/2024 10:30"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="85%"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:background="@drawable/score_background"
            android:padding="8dp"
            android:minWidth="60dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Result and Performance Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8/10 câu đúng"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:drawableStart="@drawable/ic_check_circle"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giỏi"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:background="@drawable/performance_background"
            android:padding="4dp"
            android:paddingHorizontal="8dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Time and Category Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2 phút 30 giây"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng hợp"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:drawableStart="@drawable/ic_category"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

    </LinearLayout>

</LinearLayout>